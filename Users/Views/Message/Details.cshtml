@model Data.Models.Message
	@{
		ViewBag.Title = "Details";
		Layout = "~/Views/Shared/_Layout.cshtml";
	}
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Poruka</h6>
		</div>
		<div class="card-body">
			<div class="form-group ">
				Ime i prezime:
				<div class="col-md-4 d-inline">
					@Html.DisplayFor(model => model.FullName)
				</div>
			</div>
			<div class="form-group ">
				Email:
				<div class="col-md-4 d-inline">
					@Html.DisplayFor(model => model.Email)
				</div>
			</div>
			<div class="form-group ">
				Telefon:
				<div class="col-md-4 d-inline">
					@Html.DisplayFor(model => model.Phone)
				</div>
			</div>
			<div class="form-group ">
				Poslano:
				<div class="col-md-4 d-inline">
					@Model.Created.Value.ToString("dd.MM.yyyy. hh:mm")
				</div>
			</div>
			<div class="form-group ">
				Dogadjaj:
				<div class="col-md-4 d-inline">
					@Html.DisplayFor(model => model.Event.Name)
				</div>
			</div>

		</div>
	</div>

	<div class="card shadow mb-4">
		<div class="card-body">
			@Html.DisplayFor(model => model.Message1)
		</div>
		</div>

	<div class="form-group" style="float:right; margin: 10px;">
		@Html.ActionLink("Povratak", "List", null, htmlAttributes: new { @class = "btn btn-default bg-primary white-text" })
	</div>

