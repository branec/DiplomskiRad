@model Events.Models.HomeModel
@{
	ViewBag.Title = "Home Page";
}


<div class="row">

	<!-- Blog Entries Column -->
	<div class="col-md-8">

		<h1 class="my-4">
			Istaknuti
			<small>dogadjaji</small>
		</h1>

		<div id="slideshow">
			@foreach (var item in Model.FeaturedEvents)
			{
				if (item.Pictures.Count > 0)
				{
					<div>
						<img src="/organisation/Picture/Get?pictureId=@(item.Pictures.ElementAt(0).Id)">
					</div>

				}

			}



		</div>


		<h1 class="my-4">
			Zadnji
			<small>dogadjaji</small>
		</h1>
		@foreach (var item in Model.LatestEvents)
		{
	<div class="card mb-4">
		@if (item.Pictures.Count > 0)
		{
			<img class="card-img-top" src = "/organisation/Picture/Get?pictureId=@(item.Pictures.ElementAt(0).Id)" alt="Card image cap">
		}
		else
		{
			<img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
		}
	<div class="card-body">
		<div class="row">
			<div class="col-md-8"><h2 class="card-title">@item.TypeEvent.Name</h2></div>
			<div class="col">
				@if (item.NoTickets)
				{
					<span class="badge badge-pill badge-success" style="margin: 5px; float: right;"><div style="margin-top: 10px;margin-bottom:10px;">Ulaz besplatan</div></span>
				}
			</div>
		</div>
		
		<h1>@item.Name</h1>
		<p class="card-text">@item.Description</p>
		<div class="row">
			<div class="col-sm-2">Lokacija:</div>
			<div class="col-lg">@item.Location.Address , @item.Location.City ,@item.Location.Country</div>
		</div>
		<div class="row">
			<div class="col-sm-2">Zanimljiv:</div>
			<div class="col-lg" id="interesting-@item.Id">@item.Interesting</div>
		</div>
		
		<div class="row" style="margin-top: 5px;">
			<a id="interestring-button-@item.Id"class="btn btn-primary visible-sm-inline-block" style="margin-right:5px; background-color:darkseagreen;color:white; margin-left:10px;" onclick="increaseInteresting(@item.Id)">Zanimljiv</a>
			<a href="@Url.Action("Details","Event",new { IdEvent = item.Id})" class="btn btn-primary visible-sm-inline-block">Detalji &rarr;</a>
		</div>
	</div>
	<div class="card-footer text-muted">
		Vrijeme: @item.TimeStart.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("hr-HR")) - @item.TimeEnd.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("hr-HR")) od
		<a href="#">@item.Organisation.Name</a>
	</div>
	</div>
		}

		<!-- Pagination -->
		<ul class="pagination justify-content-center mb-4">
			<li class="page-item">
				<a class="page-link" href="#">&larr; Older</a>
			</li>
			<li class="page-item disabled">
				<a class="page-link" href="#">Newer &rarr;</a>
			</li>
		</ul>

	</div>

	<!-- Sidebar Widgets Column -->
	<div class="col-md-4">

		<!-- Search Widget -->
		<div class="card my-4">
			<h5 class="card-header">Search</h5>
			<div class="card-body">
				<div class="input-group">
					<input type="text" class="form-control" placeholder="Search for...">
					<span class="input-group-btn">
						<button class="btn btn-secondary" type="button">Go!</button>
					</span>
				</div>
			</div>
		</div>

		<!-- Categories Widget -->
		<div class="card my-4">
			<h5 class="card-header">Categories</h5>
			<div class="card-body">
				<div class="row">
					<div class="col-lg-6">
						<ul class="list-unstyled mb-0">
							@foreach (var item in Model.EventTypes)
							{
								<li>
									<a href="#">@item.Name</a>
								</li>
							}
						</ul>
					</div>
					@*<div class="col-lg-6">
						<ul class="list-unstyled mb-0">
							<li>
								<a href="#">JavaScript</a>
							</li>
							<li>
								<a href="#">CSS</a>
							</li>
							<li>
								<a href="#">Tutorials</a>
							</li>
						</ul>
					</div>*@
				</div>
			</div>
		</div>

		<!-- Side Widget -->
		<div class="card my-4">
			<h5 class="card-header">Side Widget</h5>
			<div class="card-body">
				You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
			</div>
		</div>

	</div>

</div>